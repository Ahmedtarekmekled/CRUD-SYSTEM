<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Customer</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>
<body>
  <div class="container mt-5">
    <h2 class="mb-4">Edit Customer Details</h2>
    <form action="/customers/<%= customer._id %>?_method=PUT" method="POST">
      <div class="mb-3">
        <label for="name" class="form-label">Name</label>
        <input type="text" class="form-control" id="name" name="name" placeholder="Name" required value="<%= customer.name %>">
      </div>
      <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input type="email" class="form-control" id="email" name="email" placeholder="Email" value="<%= customer.email %>">
      </div>
      <div class="mb-3">
        <label for="phoneNumber" class="form-label">Phone Number</label>
        <input type="text" class="form-control" id="phoneNumber" name="phoneNumber" placeholder="Phone Number" value="<%= customer.phoneNumber %>">
      </div>
      
      <h3>Edit Address:</h3>
      <% customer.addresses.forEach((address, index) => { %>
        <div class="row">
          <div class="col mb-3">
            <label for="street<%= index %>" class="form-label">Street</label>
            <input type="text" class="form-control" id="street<%= index %>" name="street<%= index %>" placeholder="Street" required value="<%= address.street %>">
          </div>
          <div class="col mb-3">
            <label for="city<%= index %>" class="form-label">City</label>
            <input type="text" class="form-control" id="city<%= index %>" name="city<%= index %>" placeholder="City" required value="<%= address.city %>">
          </div>
        </div>
        <div class="row">
          <div class="col mb-3">
            <label for="state<%= index %>" class="form-label">State</label>
            <input type="text" class="form-control" id="state<%= index %>" name="state<%= index %>" placeholder="State" required value="<%= address.state %>">
          </div>
          <div class="col mb-3">
            <label for="zipCode<%= index %>" class="form-label">Zip Code</label>
            <input type="text" class="form-control" id="zipCode<%= index %>" name="zipCode<%= index %>" placeholder="Zip Code" required value="<%= address.zipCode %>">
          </div>
        </div>
      <% }); %>
      
      <button type="submit" class="btn btn-primary mt-4">Update</button>
    </form>
    <a href="/customers" class="btn btn-secondary mt-3">Customers Page</a>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>